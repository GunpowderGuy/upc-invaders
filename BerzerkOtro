	for (int i = 0; i < D; i++)
	{
		for (int j = 0; j < H; j++)
		{
			mapa[i][j] = matriz[i][j];
		}
	}

	for (int i = 0; i < D; i++)
	{
		for (int j = 0; j < H; j++)
		{
			Console::SetCursorPosition(j, i);
			switch (mapa[i][j])
			{
			case 0:Console::ForegroundColor = ConsoleColor::Black;
				Console::BackgroundColor = ConsoleColor::Black;
				cout << (char)219; break;
			case 1:Console::ForegroundColor = ConsoleColor::White;
				cout << (char)219;
		
			}
		}
	}
}
void desplazar_figura(int t, int &x, int &y)
{
	if (_kbhit)
	{
		t = getch();
		if (t = 224)
		{
			t = getch();
			Console::SetCursorPosition(x, y);
			cout << " ";

			switch (t)
			{
			case DERECHA:if (mapa[y][x + 1] != 1 && x<H )
				x++; break;
			case IZQUIERDA:if (mapa[y][x - 1] != 1 && x>0)
				x--; break;
			case ARRIBA:if (mapa[y - 1][x] != 1)
				y--; break;
			case ABAJO:if (mapa[y + 1][x] != 1)
				y++;
			}
			Console::SetCursorPosition(x, y);
			cout << (char)1;
		}

	}
}
void main()
{
	Console::SetWindowSize(H, D);
	Console::CursorVisible = true;
	system("color 6D");//COLOR
	int t;
	int x = 1, y = 15;

	genera_y_muestra_matriz();
	Console::SetCursorPosition(x, y);
	cout << (char)1;
	while (true)
	{
		desplazar_figura(t, x, y);
	}
}
